
.lightboxOuter {
	top:0;
	left:0;
	width:100%;
	height:100%;
	background-color: transparent;
	z-index:9999;
	margin: 0px;
	overflow: auto;
}

.lightbox {
	position: absolute;
	text-align:left;
}

.lightboxLoading {
	top: 0px;
	left: 0px;
	height: 100%;
	width: 100%;
}

.lightboxLoading img {
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -27px;
	margin-top: -27px;
}