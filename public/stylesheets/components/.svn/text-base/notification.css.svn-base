.notification {
	position: absolute;
	z-index: 10000;

	min-width: 250px;
	max-width: 500px;

	color: #fff;
	font-size: 14px;

	border: none;
	background-color: transparent;

}

.notification pre {
	white-space: normal;
}

.notificationBody {
	border: none;
	background-color: transparent;
	padding: 10px 5px;
	text-align: center;
}

.notificationBodyWithIcon {
	margin-left: 42px;
}

.notificationInner {
	border: 1px solid #999;
	background: #666 url('/images/title-gradient-overlay.png') repeat-x;

	text-shadow: #000 1px 1px 2px;

	-moz-opacity: 0.90;
	opacity: 0.90;
	filter: alpha(opacity=90);

	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
	
	-moz-box-shadow: #666 2px 2px 6px;
	-webkit-box-shadow: #666 2px 2px 6px;
}

.notificationIcon {
	position: absolute;
	top: 12px;
	left: 10px;
}