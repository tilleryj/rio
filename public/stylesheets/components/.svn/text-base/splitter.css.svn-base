.splitterH img, .splitterV img {
	-moz-user-select: none;
	-webkit-user-select: none;
	position: absolute;
}
.splitterH div, .splitterV div {
	position: relative;
}

.splitterH {
	width: 8px;
	height: 100%;
	cursor: col-resize;
}
.splitterH div {
	height: 50%;
}
.splitterH img {
	bottom: -9px;
	left: 1px;
}

.splitterV {
	height: 8px;
	width: 100%;
	cursor: row-resize;
}
.splitterV div {
	width: 50%;
	position: relative;
}
.splitterV img {
	right: -9px;
	top: 1px;
}
